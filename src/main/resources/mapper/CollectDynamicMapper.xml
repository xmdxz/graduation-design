<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.dal.mapper.CollectDynamicMapper">
  <resultMap id="BaseResultMap" type="com.boot.dal.dao.CollectDynamic">
    <!--@mbg.generated-->
    <!--@Table collect_dynamic-->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="is_deleted" jdbcType="BOOLEAN" property="isDeleted" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="dynamic_id" jdbcType="VARCHAR" property="dynamicId" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, is_deleted, create_time, update_time, dynamic_id, user_id
  </sql>

  <resultMap id="dynamicCollect" type="com.boot.dto.vo.CollectDynamicPageVo">
    <id column="id" property="id"/>
    <result column="content" property="content"/>
    <result column="images" property="images"
            typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
    <association property="userInfo" javaType="com.boot.dto.common.vo.UserBasicInformation">
      <id column="u_id" property="id"/>
      <result column="username" property="username"/>
      <result column="sex" property="sex"/>
      <result column="avatar" property="avatar"/>
    </association>
  </resultMap>
  <select id="pageCollectByUserId" resultMap="dynamicCollect">
    select u.id as u_id,u.username,u.avatar,u.sex,g.id as id, g.*
    from collect_dynamic as c
    left join dynamic g on c.dynamic_id = g.id
    left join user u on c.user_id = u.id
    where c.is_deleted = 0
    <if test="id != null and id != ''">
      and c.user_id =  #{id,jdbcType=VARCHAR}
    </if>
  </select>
</mapper>