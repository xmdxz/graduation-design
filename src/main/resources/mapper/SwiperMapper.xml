<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.dao.SwiperMapper">
    <resultMap id="BaseResultMap" type="com.boot.dto.Swiper">
        <!--@mbg.generated-->
        <!--@Table swiper-->
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="show_id" jdbcType="VARCHAR" property="showId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, show_id, create_time, `status`
    </sql>

    <select id="querySwiperList" resultType="com.boot.dto.SwiperVo">
        select sp.id,
               sp.show_id    as showId,
               sp.swiper_img as swiperImg,
               sh.name       as showName,
               sp.status
        from swiper sp
                 left join `show` sh on sh.id = sp.show_id
        where sp.status = 1
          and sp.is_deleted = 0;
    </select>

    <select id="querySwiperListForManage" resultType="com.boot.dto.SwiperVo">
        select sp.id,
               sp.show_id    as showId,
               sp.swiper_img as swiperImg,
               sh.name       as showName,
               sp.status
        from swiper sp
                 left join `show` sh on sh.id = sp.show_id
        where sp.is_deleted = 0;
    </select>
</mapper>
